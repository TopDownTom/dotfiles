[colors]
background = #20232c
;background = ${xrdb:background:#222}
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
purple = #cc66ff
teal = #00cfff

[bar/config]
width = 100%
height = 20
radius = 0.0
fixed-center = true
monitor = ${env:MONITOR:}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = DaddyTimeMono Nerd Font:pixelsize=9:antialias=true

modules-left = i3 publicIP
modules-center = timerNotify 
modules-right = mediatitle volLevel cpu usedMem sysTemp date 

tray-position = right
tray-padding = 1

;wm-restack = bspwm
wm-restack = i3

;override-redirect = true
enable-ipc = true

;cursor-click = pointer

cursor-scroll = ns-resize

; CUSTOM SCRIPTS

;[module/cpuSpeed]
;type = custom/script
;exec = $HOME/docs/scripts/cpuSpeed
;interval = 1
;format-foreground = ${colors.alert}

[module/pywal]
type = custom/menu
format-foreground = ${colors.teal}
expand-right = true
label-open = Wal
label-close = "[X]" 
label-separator = " "

menu-0-0 = [ New
menu-0-0-exec = walThemeSave new
menu-0-1 = Save
menu-0-1-exec = walThemeSave save
menu-0-2 = Load 
menu-0-2-exec = walThemeSave load
menu-0-3 = Default 
menu-0-3-exec = walThemeSave default
menu-0-4 = Inplace ]
menu-0-4-exec = walThemeSave inplace

[module/usedMem]
type = custom/script
exec = $HOME/docs/scripts/usedMem
interval = 3
format-background = white

[module/sysTemp]
type = custom/script
exec = $HOME/docs/scripts/sysTemp
interval = 5
foreground-format = white

[module/batCapac]
type = custom/script
exec = $HOME/docs/scripts/batLevel
interval = 30
format-foreground = white

[module/publicIP]
type = custom/script
exec = $HOME/docs/scripts/publicIP
format-foreground = ${colors.primary}

