! URxvt config file
! Some thing I always want enabled

URxvt*font: xft:Anonymice Nerd Font:normal:pixelsize=19
URxvt*scrollBar: false
URxvt*depth: 32
URxvt.letterSpace: 1
URxvt.background: [90]#282A36

!Extensions
!font-size and config-reload deps: perl-common-sense, perl-anyevent, perl-params-util, perl-module-build
!perl-sub-install, perl-sub-exporter, perl-test-exception, perl-linux-fd
URxvt.perl-ext-common: config-reload,font-size

!Change Font Size
URxvt.keysym.C-equal:     perl:font-size:increase
URxvt.keysym.C-minus:   perl:font-size:decrease
URxvt.keysym.C-parenright:  perl:font-size:reset
URxvt.font-size.step: 2
